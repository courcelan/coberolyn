.soundholes--inner
  @extend $layers
  position: absolute
  edges: 0
  margin: 0 auto
  width: blh*2
  background: color.bkg
  
  &::before
    edges: 0
    background: url(res/witewall_3_@2X.png)
    opacity: .25
  