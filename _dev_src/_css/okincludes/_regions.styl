.eg-1
  position: absolute
  bottom: 0
  left: blh
  z-index: 30
  height: 110px
  width: @height
  
  .soundhole
    top: 40px

    &::before
    &::after
      border-radius: 50% 50% 0 0
      border-bottom: transparent
            
.eg-2
  position: absolute
  top: 0
  right: blh
  height: 220px
  width: @height
  
  .soundhole
    top: -40px

    &::before
    &::after
      border-radius: 0 0 50% 50%
      border-top: transparent
      
.soundhole
  @extend $layers
  overflow: hidden

  &::before
  &::after
    edges: 0
    border-radius: 50%
  
  &::before
    background: color.bkg
    border: rgba(color.hairline, 75%)

  &::after
    background: url(res/witewall_3_@2X.png)
    opacity: .25
  
  // img
  //   top: -155px
